<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cr.ac.tec.ceap" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Sounds.MainWords"
            android:label="@string/title_activity_main_words"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cr.ac.tec.ceap.MainActivity" />
        </activity>
        <activity
            android:name=".Animals.MainAnimals"
            android:label="@string/title_activity_main_animals"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cr.ac.tec.ceap.MainActivity" />
        </activity>
        <activity
            android:name=".Sounds.HearSounds"
            android:label="@string/title_activity_hear_sounds"
            android:parentActivityName=".Animals.MainAnimals" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Animals.MainAnimals" />
        </activity>
        <activity
            android:name=".Animals.MainAnimalsLevel1"
            android:label="@string/title_activity_main_animals_level1"
            android:parentActivityName=".Animals.MainAnimals" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cr.ac.tec.ceap.Animals.MainAnimals" />
        </activity>
        <activity
            android:name=".Animals.MainAnimalsLevel2"
            android:label="@string/title_activity_main_animals_level2"
            android:parentActivityName=".Animals.MainAnimals" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cr.ac.tec.ceap.Animals.MainAnimals" />
        </activity>
        <activity
            android:name=".Animals.AnimalSounds"
            android:label="@string/title_activity_animal_sounds"
            android:parentActivityName=".Animals.MainAnimals" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cr.ac.tec.ceap.Animals.MainAnimals" />
        </activity>
    </application>

</manifest>
