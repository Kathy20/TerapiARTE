<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cr.ac.tec.ceap.Words.GWordSound"
    android:background="#ff6dd7ff">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCapSound"
        android:cropToPadding="true"
        android:background="@drawable/capsmall"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="G"
        android:id="@+id/textG"
        android:phoneNumber="true"
        android:textColor="#ff1d2dff"
        android:textSize="100dp"
        android:layout_above="@+id/btnWormSound"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnChickenSound"
        android:background="@drawable/chickensmall"
        android:layout_above="@+id/textG"
        android:layout_alignRight="@+id/textG"
        android:layout_alignEnd="@+id/textG" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGuitarSound"
        android:background="@drawable/guitarsmall"
        android:layout_alignTop="@+id/btnChickenSound"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="106dp"
        android:layout_marginEnd="106dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHoseSound"
        android:background="@drawable/hosesmall"
        android:layout_below="@+id/btnCapSound"
        android:layout_alignLeft="@+id/btnGuitarSound"
        android:layout_alignStart="@+id/btnGuitarSound" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnWormSound"
        android:layout_alignBottom="@+id/btnHoseSound"
        android:layout_toLeftOf="@+id/textG"
        android:layout_toStartOf="@+id/textG"
        android:background="@drawable/wormsmall"
        android:cropToPadding="true" />

</RelativeLayout>
