<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cr.ac.tec.ceap.Words.LWordSound"
    android:background="#ff6dd7ff"
    android:id="@+id/RelativeLayout"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="L"
        android:id="@+id/textL"
        android:phoneNumber="true"
        android:textColor="#ff1d2dff"
        android:textSize="100dp"
        android:layout_alignTop="@+id/btnMagnifierSound"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHillSound"
        android:background="@drawable/hillsmall"
        android:layout_above="@+id/btnParrotSound"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMagnifierSound"
        android:background="@drawable/magnifiersmall"
        android:cropToPadding="false"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnParrotSound"
        android:background="@drawable/parrotsmall"
        android:layout_alignBottom="@+id/btnMagnifierSound"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHomeL"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnHillSound"
        android:layout_alignEnd="@+id/btnHillSound" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNextL"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnMagnifierSound"
        android:layout_alignStart="@+id/btnMagnifierSound" />

</RelativeLayout>
