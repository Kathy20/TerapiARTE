<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cr.ac.tec.ceap.Animals.sheepSound"
    android:background="#ff6dd7ff"
    android:id="@+id/RelativeLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Oveja"
        android:id="@+id/textSheep"
        android:phoneNumber="true"
        android:textColor="#ff1d2dff"
        android:textSize="100dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnSheepSound"
        android:layout_toEndOf="@+id/btnSheepSound"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSheepSound"
        android:background="@drawable/sheep"
        android:layout_marginLeft="197dp"
        android:layout_marginStart="197dp"
        android:layout_alignTop="@+id/textSheep"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:id="@+id/btnMenuSheep"
        android:background="#fff2ff82"
        android:textSize="40dp"
        android:textColor="#ff1b34ff"
        android:layout_alignTop="@+id/btnSheepSound"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous"
        android:id="@+id/btnBackSheep"
        android:background="#fff2ff82"
        android:textSize="40dp"
        android:textColor="#ff1b34ff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:id="@+id/btnNextSheep"
        android:background="#fff2ff82"
        android:textSize="40dp"
        android:textColor="#ff1b34ff"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textSheep"
        android:layout_alignEnd="@+id/textSheep" />

</RelativeLayout>
