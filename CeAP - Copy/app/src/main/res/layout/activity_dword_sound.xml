<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cr.ac.tec.ceap.Words.DWordSound"
    android:background="#ff6dd7ff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="D"
        android:id="@+id/textView2"
        android:phoneNumber="true"
        android:textColor="#ff1d2dff"
        android:textSize="100dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDiceSound"
        android:background="@drawable/dicesmall"
        android:focusableInTouchMode="false"
        android:layout_alignTop="@+id/btnFingerSound"
        android:layout_toLeftOf="@+id/btnShowerSound"
        android:layout_toStartOf="@+id/btnShowerSound" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDinosaurSound"
        android:background="@drawable/dinosaursmall"
        android:layout_above="@+id/btnShowerSound"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDolphinSound"
        android:background="@drawable/dolphinsmall"
        android:layout_alignBottom="@+id/btnDonutSound"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDonutSound"
        android:background="@drawable/donutsmall"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFingerSound"
        android:background="@drawable/fingersmall"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnShowerSound"
        android:background="@drawable/showersmall"
        android:layout_alignBottom="@+id/btnDonutSound"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTeethSound"
        android:background="@drawable/teethsmall"
        android:layout_alignBottom="@+id/btnFingerSound"
        android:layout_toRightOf="@+id/btnDolphinSound"
        android:layout_toEndOf="@+id/btnDolphinSound" />
</RelativeLayout>
